srcFiles = [
    "config.cpp",
    "execute.cpp",
    "logger.cpp",
    ]

Import("debug")

env = Environment()
env.Append(CXXFLAGS = "-m32 -Wall -std=gnu++11 -pthread", LINKFLAGS = "-m32", LIBS = [
  "boost_program_options",
  "boost_filesystem",
  "boost_system",
  "boost_thread",
  "boost_log",
  "pthread"
  ]
)

prog = env.Program("executor", srcFiles + ["main.cpp"])
lib = env.SharedLibrary("executor", srcFiles + ["libmain.cpp"])
env.NoClean([prog, lib])
